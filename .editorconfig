[*]
charset                                                                               = utf-8
end_of_line                                                                           = crlf
indent_style                                                                          = tab
tab_width                                                                             = 4
trim_trailing_whitespace                                                              = true

dotnet_naming_style.camel_case_style.capitalization                                   = camel_case
dotnet_naming_style.pascal_case_style.capitalization                                  = pascal_case
# Interfaces
dotnet_naming_style.interface_style.capitalization                                    = pascal_case
dotnet_naming_style.interface_style.required_prefix                                   = I
dotnet_naming_symbols.interfaces.applicable_kinds                                     = interface
dotnet_naming_rule.interface_names.symbols                                            = interfaces
dotnet_naming_rule.interface_names.style                                              = interface_style
dotnet_naming_rule.interface_names.severity                                           = warning
# Klassennamen
dotnet_naming_symbols.classes.applicable_kinds                                        = class, struct, enum
dotnet_naming_rule.class_names.symbols                                                = classes
dotnet_naming_rule.class_names.style                                                  = pascal_case_style
dotnet_naming_rule.class_names.severity                                               = warning
# Instanzvariablen internal/public
dotnet_naming_symbols.internal_public_variables_symbols.applicable_kinds              = field
dotnet_naming_symbols.internal_public_variables_symbols.applicable_accessibilities    = internal, public
dotnet_naming_rule.internal_public_variables.symbols                                  = internal_public_variables_symbols
dotnet_naming_rule.internal_public_variables.style                                    = pascal_case_style
dotnet_naming_rule.internal_public_variables.severity                                 = warning
# Lokale Variablen
dotnet_naming_symbols.local_symbols.applicable_kinds                                  = local, local_function
dotnet_naming_rule.locals.symbols                                                     = local_symbols
dotnet_naming_rule.locals.style                                                       = camel_case_style
dotnet_naming_rule.locals.severity                                                    = warning
# Konstanten
dotnet_naming_symbols.constant_symbols.applicable_kinds                               = local, field
dotnet_naming_symbols.constant_symbols.required_modifiers                             = const
dotnet_naming_rule.constants.symbols                                                  = constant_symbols
dotnet_naming_rule.constants.style                                                    = pascal_case_style
dotnet_naming_rule.constants.severity                                                 = warning
# Instanzvariablen private/protected
dotnet_naming_symbols.private_protected_variables_symbols.applicable_kinds            = field
dotnet_naming_symbols.private_protected_variables_symbols.applicable_accessibilities  = private, private_protected, protected
dotnet_naming_rule.private_protected_variables.symbols                                = private_protected_variables_symbols
dotnet_naming_rule.private_protected_variables.style                                  = camel_case_style
dotnet_naming_rule.private_protected_variables.severity                               = warning
# Instanzvariablen protected readonly
dotnet_naming_symbols.protected_readonly_variables_symbols.applicable_kinds           = field
dotnet_naming_symbols.protected_readonly_variables_symbols.applicable_accessibilities = protected
dotnet_naming_rule.protected_readonly_variables.symbols                               = protected_readonly_variables_symbols
dotnet_naming_rule.protected_readonly_variables.style                                 = pascal_case_style
dotnet_naming_rule.protected_readonly_variables.severity                              = warning

dotnet_sort_system_directives_first                                                   = true
dotnet_style_coalesce_expression                                                      = true:warning
dotnet_style_collection_initializer                                                   = true:suggestion
dotnet_style_null_propagation                                                         = true:warning
dotnet_style_object_initializer                                                       = true:suggestion
dotnet_style_predefined_type_for_locals_parameters_members                            = true:error
dotnet_style_predefined_type_for_member_access                                        = true:error
dotnet_style_prefer_auto_properties                                                   = true:warning
dotnet_style_qualification_for_event                                                  = true:error
dotnet_style_qualification_for_field                                                  = true:error
dotnet_style_qualification_for_method                                                 = true:error
dotnet_style_qualification_for_property                                               = true:error
dotnet_style_readonly_field                                                           = true:error
dotnet_style_require_accessibility_modifiers                                          = always:error

csharp_new_line_before_catch                                                          = true
csharp_new_line_before_else                                                           = true
csharp_new_line_before_finally                                                        = true
csharp_prefer_simple_default_expression                                               = true:error
csharp_style_inlined_variable_declaration                                             = true:error
csharp_space_after_colon_in_inheritance_clause                                        = true
csharp_space_before_colon_in_inheritance_clause                                       = false
csharp_style_expression_bodied_accessors                                              = when_on_single_line:warning
csharp_style_expression_bodied_constructors                                           = when_on_single_line:warning
csharp_style_expression_bodied_indexers                                               = when_on_single_line:warning
csharp_style_expression_bodied_methods                                                = when_on_single_line:warning
csharp_style_expression_bodied_operators                                              = when_on_single_line:warning
csharp_style_pattern_matching_over_as_with_null_check                                 = true:warning
csharp_style_pattern_matching_over_is_with_cast_check                                 = true:warning
csharp_style_throw_expression                                                         = true:suggestion
csharp_style_var_when_type_is_apparent                                                = true:error
csharp_style_var_for_built_in_types                                                   = true:warning
csharp_style_var_elsewhere                                                            = true:warning
csharp_style_unused_value_expression_statement_preference                             = discard_variable:none

[*.yml]
indent_style = space
indent_size = 2